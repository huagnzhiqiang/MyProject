<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <com.hzq.baselibs.view.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp">

            <RelativeLayout
                android:id="@+id/user_img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/user_moren"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户类型"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/qiye_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="账号类型"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_434a5c"
                    android:textSize="15sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/qiye_vip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qiye_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="账号等级"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/qiye_vip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_vip1"
                    android:layout_toRightOf="@+id/qiye_vip"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="会员"
                    android:maxEms="15"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_434a5c"
                    android:textSize="15sp"/>


                <ImageView
                    android:id="@+id/arrow_vip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qiye_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="企业名称"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/qiye_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_name"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="企业名称"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_7a8296"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/arrow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qiye_introduction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_introduction_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="企业简称"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/qiye_introduction_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_introduction_name"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="企业名称"
                    android:paddingRight="@dimen/sp_16"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_7a8296"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qiye_good_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="所属行业"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/qiye_good_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_good"
                    android:layout_toRightOf="@+id/tv_good"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="所属行业"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_7a8296"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/arrow_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qiye_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="企业规模"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/qiye_mode_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow"
                    android:layout_toRightOf="@+id/tv_mode"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="企业规模"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_7a8296"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qiye_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所在城市"
                    android:textColor="@color/color_434a5c"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/qiye_city_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_city"
                    android:layout_toRightOf="@+id/tv_city"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请选择城市"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_434a5c"
                    android:textColorHint="@color/color_7a8296"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/arrow_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more"/>

            </RelativeLayout>

        </LinearLayout>

    </com.hzq.baselibs.view.ElasticScrollView>

</android.support.v7.widget.LinearLayoutCompat>