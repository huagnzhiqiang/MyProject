<?xml version="1.0" encoding="utf-8"?>
<com.hzq.baselibs.view.ElasticScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43dp"
            android:src="@drawable/user_moren"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImg"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="点击登录"
            android:textColor="@color/color_434a5c"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="我的"
            android:textColor="@color/color_434a5c"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e5e8ed"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:overScrollMode="never"
            android:scrollbars="none"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="i-TOP"
            android:textColor="@color/color_434a5c"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e5e8ed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:weightSum="4">


            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/me_icon_share"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/color_434a5c"
                android:textSize="13sp"/>


            <TextView
                android:id="@+id/tv_admission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/me_icon_ruzhu"
                android:gravity="center"
                android:text="入驻申请"
                android:textColor="@color/color_434a5c"
                android:textSize="13sp"/>


            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/me_icon_feedback"
                android:gravity="center"
                android:text="意见反馈"
                android:textColor="@color/color_434a5c"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/me_icon_set"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/color_434a5c"
                android:textSize="13sp"/>


        </LinearLayout>
    </LinearLayout>

</com.hzq.baselibs.view.ElasticScrollView>
